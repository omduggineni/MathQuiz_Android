<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omduggineni.operationsquiz"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="26" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.omduggineni.operationsquiz.ChooseOperation"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.omduggineni.operationsquiz.Addition"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_addition"
            android:theme="@style/FullscreenTheme" />
        <activity android:name="com.example.omduggineni.operationsquiz.Finished" />
        <activity
            android:name="com.example.omduggineni.operationsquiz.Subtraction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_subtraction"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.example.omduggineni.operationsquiz.Multiplication"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_multiplication"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.example.omduggineni.operationsquiz.SubtractionPositive"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_subtraction_positive"
            android:theme="@style/FullscreenTheme" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.omduggineni.operationsquiz.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>